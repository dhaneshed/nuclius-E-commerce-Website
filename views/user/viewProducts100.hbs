
  <section>
    <div class="container mt-5">
      <div class="row"> 
        {{#each  products}}

        <div class="col-md-3">
          <div class="card" style="width: 18rem;">

            <a href="/productDetails/{{this._id}}" class="btn btn-primary">
            <img class="card-img-top"
              src="/product-images/{{this._id}}.jpg"
              alt="Card image cap"></a>
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
               <p class="card-text">â‚¹{{this.Price}}</p>
              <p class="card-text">{{this.Description}}</p>
              <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
            </div>
          </div>
        </div> 
        {{/each}}

        </div>
      </div>
    </div>
  </section>
  <script>
    function addToCart(proId){
      $.ajax({
        url:'/addToCart/'+proId,
        method:'get',
        success:(response)=>{
           if(response.status){
                    alert("added")
                }
                else{
                    alert("out of stock")
                }
        }
      })
    }
  </script>

