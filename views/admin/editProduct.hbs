<body>
  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Edit Product</h2>
        <p></p>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <form action="/admin/editProduct/{{product._id}}" method="POST" enctype="multipart/form-data">
          <label for="Name"> Name</label>
          <input type="text" name="Name" class="form-control" value="{{product.Name}}"/>

          <label for="Category">Category</label>
          <select name="Category" id="Category">
            <option value={{product.Category}}>{{product.Category}}</option>
          </select>
          <br>
          <label for="Price">Price</label>
          <input type="number" name="Price" class="form-control" value="{{product.Price}}" />

          <label for="Description">Description</label>
          <input type="text" name="Description" class="form-control" value="{{product.Description }}" />



          <label for="Quantity">Quantity</label>
          <input type="number" name="Quantity" class="form-control" value="{{product.Quantity }}" />


          <label for="Image">Image</label>

          <img src="/uploads/{{this.product.images.[0]}}" alt="" style="width: 100px; height:auto  " id="imgView1"
            class="pt-3">
          <input type="file" class="form-control" name="image1" onchange="viewImage1(event)">


          <img src="/uploads/{{this.product.images.[1]}}" alt="" style="width: 100px; height:auto  " id="imgView2"
            class="pt-3">
          <input type="file" class="form-control" name="image2" onchange="viewImage2(event)">

          <img src="/uploads/{{this.product.images.[2]}}" alt="" style="width: 100px; height:auto  " id="imgView3"
            class="pt-3">
          <input type="file" class="form-control" name="image3" onchange="viewImage3(event)">



          <img src="/uploads/{{this.product.images.[3]}}" alt="img" style="width: 100px; height:auto  " id="imgView4"
            class="pt-3">
          <input type="file" class="form-control" name="image4" onchange="viewImage4(event)">



          <input type="hidden" name="image1" value="{{this.product.images.[0]}}">
          <input type="hidden" name="image2" value="{{this.product.images.[1]}}">
          <input type="hidden" name="image3" value="{{this.product.images.[2]}}">
          <input type="hidden" name="image4" value="{{this.product.images.[3]}}">


          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
    </div>
  </section>
</body>
<script>
  function viewImage1(event) {
    document.getElementById('imgView1').src = event.target = URL.createObjectURL(event.target.files[0])
  }
  function viewImage2(event) {
    document.getElementById('imgView2').src = event.target = URL.createObjectURL(event.target.files[0])
  }
  function viewImage3(event) {
    document.getElementById('imgView3').src = event.target = URL.createObjectURL(event.target.files[0])
  }

  function viewImage4(event) {
    document.getElementById('imgView4').src = event.target = URL.createObjectURL(event.target.files[0])
  }

</script>