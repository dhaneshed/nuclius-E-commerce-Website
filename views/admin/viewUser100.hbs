<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Users</h2>
        <form action="/admin/add_sub" method="post" enctype="multipart/form-data">

        </form>
      </div>
    </div>
  </div>
</section>
<!-- Table section -->
<section mx-auto>
  <div class="card-body">
    <div class="row mt-5 mx-auto">
      <div class="table-responsive">
        <div class="table-responsive">
          <table class="table align-middle table-nowrap mb-0">
            <thead class="table-light">
              <tr>
                <th class="align-middle" scope="col">No:</th>
                <th class="align-middle" scope="col">User Name</th>
                <th class="align-middle" scope="col">Phone Number</th>
                <th class="align-middle" scope="col">Email</th>
                <th class="align-middle" scope="col">Option</th>
              </tr>
            </thead>
            <tbody>
              {{#each users}}
              <tr>
                <th scope="row">1</th>
                <td>{{this.Name}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.Email}}</td>
                <td>
                  {{#if isBlocked}}
                  <a href="/admin/activateUser/{{this._id}}" class="btn btn-success">Activate</a>
                  {{else}}
                  <a href="/admin/disableUser/{{this._id}}" class="btn btn-danger"
                    onclick=" return confirm('Do you want to disable {{this.name}}? Are you sure?')">Disable</a>

                  {{/if}}

                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <!-- table-responsive end// -->
    </div>
  </div>
</section>