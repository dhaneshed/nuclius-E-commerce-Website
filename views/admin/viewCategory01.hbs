<section>
  <div class="container mt-4">
    <div class="row">
      <h1 style="margin:auto">Category List</h1>
      <div class="col-md-6">
        <h2 class="text-center">Add Category</h2>
        <form action="/admin/addCategory" method="post" enctype="multipart/form-data">

          <label for="CategoryName">Category</label>
          <input type="text" name="CategoryName" class="form-control" >
          <button type="submit" class="btn btn-success mt-4">Submit</button>

        </form>
      </div>
    </div>
         
 
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Category</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.CategoryName}}</td>
        
          <td>

            <a href="/admin/editCategory/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/deleteCategory/{{this._id}}" class="btn btn-danger"
              onclick=" return confirm('Do you want to delete {{this.CategoryName}}? Are you sure?')">Delete</a>


          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
</div>
</section>